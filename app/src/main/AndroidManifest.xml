        <service
            android:name="io.ap1.libbeaconmanagement.ServiceBeaconManagement"
            android:enabled="true"
            android:exported="true" />
        <service android:name="com.perples.recosdk.RECOBeaconService" />
        <service
            android:name=".MyServiceBeaconMngt"
