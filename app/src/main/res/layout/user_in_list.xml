<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/cell_user_in_list"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_detected_user_color"
        android:layout_width="5dp"
        android:layout_height="75dp"
        android:background="@color/colorAccent"
        />

    <ImageView
        android:id="@+id/iv_detected_profile_image"
        android:layout_toEndOf="@id/tv_detected_user_color"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="profileImage"
        />

    <TextView
        android:id="@+id/tv_detected_user_msg_notify"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:background="@drawable/textview_round"
        android:layout_toEndOf="@id/tv_detected_user_color"
        android:text="11"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_detected_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/iv_detected_profile_image"
        android:text="name"
        />

    <TextView
        android:id="@+id/tv_detected_user_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_detected_profile_image"
        android:layout_below="@id/tv_detected_user_name"
        android:text="bio"/>
</RelativeLayout>