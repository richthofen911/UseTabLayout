<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    tools:context=".view.ActivityBeaconDetail">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_beacon_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:minHeight="?attr/actionBarSize"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white">
        <TextView
            android:id="@+id/tv_toobar_beacon_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:onClick="onAddClicked"
            android:text="Add"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_nickName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nickname: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_nickName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_url_far"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Url Far: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_url_far"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:inputType="textUri"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_url_near"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Url Near: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_url_near"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:inputType="textUri"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_company"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Company "/>

                <TextView
                    android:id="@+id/tv_beacon_detail_company_select"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="Select"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_beacon_detail_company_arrow"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/light_blue"
                    android:text=">"
                    android:clickable="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Title"/>

                <EditText
                    android:id="@+id/et_beacon_detail_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_message"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Message"/>

                <EditText
                    android:id="@+id/et_beacon_detail_message"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_uuid"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="UUID: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_uuid"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_major"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Major: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_major"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_minor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Minor: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_minor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_rssi"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="RSSI: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_rssi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_macAddress"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="MACAddress: "/>

                <EditText
                    android:id="@+id/et_beacon_detail_macAddress"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_lat"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Latitude"/>

                <EditText
                    android:id="@+id/et_beacon_detail_lat"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_beacon_detail_lng"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Longitude"/>

                <EditText
                    android:id="@+id/et_beacon_detail_lng"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
